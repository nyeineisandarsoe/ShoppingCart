@using ShoppingCart.Models
@{
    ViewBag.Title = "ViewItem";
}

@{ 
    var products = (List<PurchaseProduct>)ViewData["PurchasedProduct"];
    
}
<div class="container-fluid">
    <h2>My Purchase</h2>
</div>

<section>
    <div class="row" style="padding: 50px 0;">
        @foreach (var product in products)
        {
            <table>
                <tr>
                    <td rowspan="5">
                        <div class="col" style="width:400px">
                            <div class="thumbnail" style="position: relative;">
                                <span class="glyphicon glyphicon-remove" style="position: absolute; right: 10px; top: 10px;"></span>
                                <img src="~/@product.Image" alt="Pay Pal">
                                <div class="caption">
                                    <h3>@product.ProductName</h3>
                                    <p>@product.Description</p>
                                    <div>
                                        <button style="position:center; width:230px;">Download</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>Purchased On:</td>
                    <td>@product.PurchaseDate</td>
                </tr>
                <tr>
                    <td>Quantity:</td>
                    <td>@product.Quantity</td>
                </tr>
                <tr>
                    <td>Activation Code:</td>
                    <td>
                        @product.ActivationCode
                    </td>
                </tr>
            </table>
        }
    </div>
</section>