<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="images/cart.png" sizes="16x16">
    <title>@ViewBag.Title - Shopping Cart</title>
    <style>
        h2 {
            display: inline-block;
            padding-top: 7px;
        }
        .glyphicon-remove:hover {
            cursor: pointer;
            opacity: 0.5;
        }
    </style>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="padding-bottom: 0;">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Shopping Cart", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Gallery", "Index", "Product")</li>
                    <li>@Html.ActionLink("My Purchases", "Index", "Purchase")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="@ViewBag.ActiveCart"><a href="/Cart"><img src="../images/cart.png" width="30" alt="Cart logo" style="border-radius: 15%; vertical-align: top; margin-top: -5px; margin-right: 5px;" /> Cart <span id="cart_count"></span></a></li>
                    <li><a href="/Login">Login</a></li>

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>
    <footer align="center" style="background-color: #222; border-color: #080808; padding: 10px; color: white;">
        <p>&copy; @DateTime.Now.Year - Shopping Cart Application</p>
        <p style="margin: 0; font-size: 12px;">Developed by SA48 - Team11(A)</p>
    </footer>

    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
