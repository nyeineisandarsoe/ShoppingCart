@using ShoppingCart.Models;
@{
    ViewBag.Title = "Gallery";
    ViewBag.ActiveGallery = "active";
}    
@{
    var products = (List<Product>)ViewData["ProductData"];
}
<h2>Gallery</h2>


<section>
    <div class="container" style="padding: 40px 0;">
        @*<div class="input-group">
                <input type="text" class="form-control" name="search" style="max-width: 100%;" placeholder="Enter Keyword" aria-describedby="basic-addon2">
            </div>*@
        <form class="form-inline md-form mr-auto mb-4">
            <input class="form-control mr-sm-2" type="text" placeholder="Search" name="search" aria-label="Search">
            <button class="btn aqua-gradient btn-rounded btn-sm my-0" formaction="Product/Search" type="submit">Search</button>
        </form>
    </div>
</section>

<section>
    <div class="row">
        @foreach (var product in products)
        {
            <div class="col-sm-6 col-md-3">
                <div class="thumbnail">
                    <img src="~/@product.Image" alt="Pay Pal">
                    <div class="caption">
                        <h3>@product.ProductName</h3>
                        <p>@product.Description</p>
                        <p><button type="button" class="btn btn-success" onclick="AddtoCart(this.value);" value="@product.ProductId">Add to Cart</button></p>
                    </div>
                </div>
            </div>
        }

    </div>
</section>

