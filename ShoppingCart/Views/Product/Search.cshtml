@using ShoppingCart.Models;
@{
    ViewBag.Title = "Search";
}
@{
    var products = (List<Product>)ViewData["ProductsByName"];
}
<h2>Products by Name</h2>

<section>
    <div class="row">
        @foreach (var product in products)
        {
            <div class="col-sm-6 col-md-3">
                <div class="thumbnail">
                    <img src="~/@product.Image" alt="Pay Pal">
                    <div class="caption">
                        <h3>@product.ProductName</h3>
                        <p>@product.Description</p>
                        <p><button type="button" class="btn btn-success" onclick="AddtoCart(this.value);" value="@product.ProductId">Add to Cart</button></p>
                    </div>
                </div>
            </div>
        }

    </div>
</section>