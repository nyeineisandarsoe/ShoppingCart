@using ShoppingCart.Models;
@{
    ViewBag.Title = "Gallery";
    ViewBag.ActiveGallery = "active";
}
@{
    var products = (List<Product>)ViewData["Products"];
}

@Html.Partial("_Search")

<section style="padding-top: 30px; min-height: 500px;">
    <div class="row">
        @if (products.Count() == 0)
        {
            <div class="alert alert-info alert-dismissible" role="alert" style="margin-top: 20px;">
                <strong>Information!</strong> No Item Result!
            </div>
        }
        @foreach (var product in products)
        {
            <div class="col-sm-6 col-md-3">
                <div class="thumbnail">
                    <img src="~/@product.Image" alt="Pay Pal">
                    <div class="caption">
                        <h3>@product.ProductName</h3>
                        <p>@product.Description</p>
                        <p><button type="button" class="btn btn-success" onclick="AddtoCart(this.value);" value="@product.ProductId">Add to Cart</button></p>
                    </div>
                </div>
            </div>
        }
    </div>
</section>